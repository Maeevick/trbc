{
  "name": "trbc",
  "version": "1.0.0",
  "description": "The Rebel Black Cat - js13k 2025",
  "main": "index.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "npx prettier --check ./src",
    "format:fix": "npx prettier --write ./src",
    "lint": "npx eslint ./src",
    "test": "vitest",
    "test:nowatch": "vitest run",
    "ci": "npm run format && npm run lint && npm run test:nowatch && npm run build",
    "ci:fix": "npm run format:fix && npm run lint && npm run test:nowatch && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Maeevick/trbc.git"
  },
  "keywords": [
    "gamedev",
    "gamejam",
    "indiegame"
  ],
  "author": "Maeevick",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Maeevick/trbc/issues"
  },
  "homepage": "https://github.com/Maeevick/trbc#readme",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "lightningcss": "^1.30.1",
    "terser": "^5.43.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3",
    "vite-plugin-singlefile": "^2.3.0",
    "vitest": "^3.2.4"
  }
}
